{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],                                        
    "jsx": "react-jsx",                                
    "moduleResolution": "node",                       
    "resolveJsonModule": true,                        
    "allowJs": true,                                  
    "noEmitHelpers": true,                            
    "noEmitOnError": true,                            
    "isolatedModules": true,                          
    "allowSyntheticDefaultImports": true,             
    "esModuleInterop": true,  
    "forceConsistentCasingInFileNames": true,                           
    "strict": true,                                      
    "skipLibCheck": true                                 
  },
  "include": ["src"]
}
